@media screen and (max-width:480px){
    .container{
        font-size: 20px;
    }
    .container_button{
        display: flex;
    }
    .container_nav{
        width: 100%;

        display: none;
        flex-flow: column nowrap;
        justify-content: center;
        align-items: center;
        height: 0vh;
        overflow: hidden;
        opacity:0;
        transition: all .5s ease;
    }
    .container_nav.activo{
        height: 40vh;
        opacity:1;
        
    }
    .container_ul{
        flex-direction: column;
    }
    .container_li{
        margin: .5em 0;
    }
}

@keyframes entrarArriba{
    from{
        transform: translateY(-200%);
    }
    to{
        transform: translateY(0);
    }
}
</style>